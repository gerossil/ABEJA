# Utilisez une image Python de base
FROM influxdb

ENV DOCKER_INFLUXDB_INIT_MODE=setup
ENV DOCKER_INFLUXDB_INIT_USERNAME=admin
ENV DOCKER_INFLUXDB_INIT_PASSWORD=admin54321
ENV DOCKER_INFLUXDB_INIT_ORG=my-org
ENV DOCKER_INFLUXDB_INIT_BUCKET=my-bucket
ENV DOCKER_INFLUXDB_INIT_RETENTION=1w
ENV DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=my-token
